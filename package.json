{
	"name": "temp",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"prestart:dev": "npm run migrate && npm run seed",
		"prestart:debug": "npm run migrate && npm run seed",
		"start:debug": "nest start --debug 0.0.0.0:9229 --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest --config jest/jest.unit.config.js",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"pretest:e2e:run": "npm run migrate",
		"test:e2e:run": "jest --config jest/jest.e2e.config.js --runInBand",
		"test:e2e:watch": "jest --config jest/jest.e2e.config.js  --runInBand --watchAll",
		"test:e2e": "docker-compose -f docker-compose.test.yaml run api-service-test",
		"knex": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile src/database/knexfile.ts",
		"migrate": "npm run knex migrate:latest",
		"migrate:make": "npm run knex migrate:make -- -x ts",
		"postmigrate:make": "ts-node  -r tsconfig-paths/register src/database/generate-index.ts",
		"seed": "npm run knex seed:run",
		"seed:make": "npm run knex seed:make -- -x ts",
		"migrate:list": "npm run knex migrate:list",
		"migrate:rollback": "npm run knex migrate:rollback",
		"migrate:down": "npm run knex migrate:down --"
	},
	"dependencies": {
		"@nestjs-architects/typed-cqrs": "^1.1.2-alpha.0",
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.0.0",
		"@nestjs/cqrs": "^10.2.6",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/swagger": "^7.1.14",
		"@willsoto/nestjs-objection": "^8.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dayjs": "^1.11.10",
		"dotenv": "^16.3.1",
		"helmet": "^7.1.0",
		"knex": "^2.3.0",
		"lodash": "^4.17.21",
		"nanoid": "^5.0.3",
		"nest-commander": "^3.12.2",
		"nestjs-cls": "^3.6.0",
		"nestjs-pino": "^3.5.0",
		"objection": "^3.1.2",
		"pg": "^8.11.3",
		"pino": "^8.16.1",
		"pino-pretty": "^10.2.3",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"uuid": "^9.0.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@golevelup/ts-jest": "^0.4.0",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@side/jest-runtime": "^1.1.0",
		"@swc/core": "^1.3.95",
		"@swc/jest": "^0.2.29",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/knex-cleaner": "^1.3.6",
		"@types/lodash": "^4.14.201",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.3.1",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "^29.5.0",
		"knex-cleaner": "^1.3.1",
		"prettier": "^3.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@libs/cli/cli(|/.*)$": "<rootDir>/libs/cli/src/$1",
			"^@libs/logger/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
			"^@libs/env/env(|/.*)$": "<rootDir>/libs/env/src/$1"
		}
	}
}
