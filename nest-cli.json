{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"webpack": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": true,
					"introspectComments": false
				}
			}
		],
		"builder": "swc",
		"typeCheck": true
	}
}
